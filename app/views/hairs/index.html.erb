<h1>Listing hairs</h1>

<table>

<% @hairs.each do |hair| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(hair.image_url, class: 'list_image') %>
    </td>

    <td class="list_description">
      <dl>
	<dt><%= hair.title %></dt>
	<dd><%= truncate(strip_tags(hair.description), length: 80) %></dd>
      </dl>
    </td>

    <td class="list_actions">
      <%= link_to 'Show', hair %></br/>
      <%= link_to 'Edit', edit_hair_path(hair) %><br/>
      <%= link_to 'Destroy', hair, confirm: 'Are you sure?' , method: :delete %>
    </td>
  </tr>
<% end %>
</table>

